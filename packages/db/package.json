        "db:migrate": "cross-env DB_MIGRATING=true tsx src/migrate.ts",
        "db:seed": "cross-env DB_SEEDING=true tsx src/seed.ts"
    },
    "dependencies": {
        "@neondatabase/serverless": "^1.0.1",
        "dotenv": "^17.2.1",
