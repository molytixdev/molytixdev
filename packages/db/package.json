        "drizzle-zod": "^0.8.3",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@workspace/eslint-config": "workspace:*",
        "@workspace/typescript-config": "workspace:*",
        "cross-env": "^10.0.0",
        "drizzle-kit": "^0.31.4",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.20.3"
    },
    "exports": {
        ".": "./src/index.ts",
